---
const { name, svg, link, index = 0} = Astro.props
---
<a href={link} target="_blank" class="text-xl p-4 text-center bg-slate-700 border-slate-600 border-2 border-solid rounded-xl hover:bg-slate-600 flex flex-row justify-center items-center gap-4 transition-all social-animate" style={`animation-delay: ${index * 120}ms`}>
    <img src={svg} alt={name}>
    <p class="w-48 text-left">{name}</p>
</a>

<style>
@keyframes social-in {
  from {
    opacity: 0;
    transform: translateX(-24px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}


.social-animate {
  opacity: 0;
  animation: social-in 0.5s ease-out forwards;
}
</style>